---
import i18next, { t, changeLanguage } from "i18next";
import { Contact } from "../../components/shared/Contact.jsx";
import Layout from "../../layouts/Layout.astro";
import Inicio from "../../components/Inicio.astro";
import AboutUs from "../../components/AboutUs.astro";
import Eventos from "../../components/Eventos.astro";

changeLanguage("en");

const currentLanguage = i18next.language;
const translates = t("contact", { returnObjects: true });
---

<Layout>
	<video
		src="/video/bg-piac.mp4"
		autoplay
		loop
		muted
		playsinline
		class="w-full h-full object-fill fixed top-0 z-[-1]"
	>
	</video>
	<Inicio />
	<Eventos />
	<AboutUs />
	<Contact client:load currentLanguage={currentLanguage} translates={translates} />
</Layout>
