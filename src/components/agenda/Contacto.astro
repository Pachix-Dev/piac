---
import i18next, { changeLanguage, t } from "i18next";

changeLanguage("es");
const translates = { returnObjects: true };

const currentLanguage = i18next.language;
---

<section class="bg-[#f9f7f0] py-8">
    <div class="container mx-auto px-4 md:px-8">
        <div class="flex items-center gap-4 mb-8">
            <img
                src="/img/icon_PIAC2.webp"
                alt="icono piac"
                width="72"
                class="w-16 md:w-20"
            />
            <p
                class="text-3xl md:text-5xl uppercase font-extrabold text-gray-800"
            >
                {t("agenda.contacto")}
            </p>
        </div>

        <div
            class="flex flex-col md:flex-row md:items-center justify-center gap-10 md:gap-20"
        >
            <div class="w-full md:w-auto text-center md:text-right px-3">
                <p class="font-bold text-3xl md:text-4xl text-gray-800">
                    Bernd Rohde
                </p>
                <p class="text-xl md:text-2xl text-gray-600">
                    {t("agenda.puesto_1")}
                </p>
                <p class="text-xl md:text-2xl text-gray-600 mt-2">
                    CEO & Member of the Board of Directors
                </p>
                <p class="text-xl md:text-2xl text-gray-600">
                    Italian German Exhibition Company
                </p>
                <p class="text-xl md:text-2xl text-gray-600">
                    Canada / USA / Mexico
                </p>
                <a
                    class="text-lg md:text-xl font-medium text-gray-800 hover:text-blue-600 transition-colors duration-200"
                    href="mailto:bernd.rohde@igeco.mx"
                >
                    bernd.rohde@igeco.mx
                </a>
            </div>

            <div class="hidden md:block w-px h-64 bg-gray-400"></div>

            <div class="w-full md:w-auto text-center md:text-left px-3">
                <p class="font-bold text-3xl md:text-4xl text-gray-800">
                    Lilian Malanco
                </p>
                <p class="text-xl md:text-2xl text-gray-600">
                    {t("agenda.puesto_2")}
                </p>
                <p class="text-xl md:text-2xl text-gray-600 mt-2">
                    Italian German Exhibition Company Mexico
                </p>
                <p class="text-xl md:text-2xl text-gray-600">
                    Cel: + 52 (565) 107 9251
                </p>
                <a
                    class="text-lg md:text-xl font-medium text-gray-800 hover:text-blue-600 transition-colors duration-200"
                    href="mailto:lilian.malanco@igeco.mx"
                >
                    lilian.malanco@igeco.mx
                </a>
            </div>
        </div>
    </div>
</section>
