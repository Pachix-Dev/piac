---
import { t } from 'i18next'
---

<section
  class='min-h-screen relative flex items-center justify-center py-10 px-4 sm:px-6 lg:px-8'
>
  <div class='w-full h-full absolute top-0 z-[0] bg-black opacity-[35%]'></div>
  <video
    src='/video/piac 2.mp4'
    autoplay
    loop
    muted
    playsinline
    class='w-full h-full object-cover absolute top-0 z-[-1]'
  >
  </video>
  <div
    class='w-full max-w-4xl text-center'
    data-aos='fade-up'
    data-aos-duration='3000'
  >
    <div class='flex justify-center mb-6 sm:mb-8'>
      <img
        width='256'
        height="256"
        src='/img/icon_PIAC.webp'
        alt='PIAC 2025'
        class='w-40 sm:w-48 md:w-56 lg:w-64 max-w-full h-auto'
      />
    </div>

    <div
      class='uppercase text-white text-3xl sm:text-4xl md:text-5xl lg:text-6xl leading-tight mb-6'
    >
      <p class='font-bold inline-block mr-2'>{t('home.title_1')}</p>
      <p class='inline-block'>{t('home.title_2')}</p>
    </div>

    <div>
      <p class='text-xl sm:text-2xl md:text-3xl text-white mx-auto max-w-3xl'>
        {t('home.description')}
      </p>
    </div>
  </div>
</section>
