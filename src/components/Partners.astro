---
import { partners } from "../data/data_partners.js";
---

<section class="bg-[#F9F7F0] p-10">
    {partners.map((partnert) => (
        <div class="w-screen">
          <h2 class="border-b-4 border-amber-400 w-fit font-bold text-5xl text-blond italic mb-10 mt-10">
            {partnert.title}
          </h2>
          <div class="flex flex-wrap justify-center gap-10 gap-x-15 pt-1">
            {partnert.items.map((item) => (
              <a href={item.link} target="_blank" rel="noopener noreferrer">
                <div class="w-[250px] h-[100px] overflow-hidden flex items-center justify-center">
                    <img
                    src={item.img}
                    alt={item.name}
                    class="object-contain w-full h-full"
                    />
                </div>
            </a>
            ))}
          </div>
        </div>
      ))}
</section>