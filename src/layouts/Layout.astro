---
import { ClientRouter } from "astro:transitions";
import { t } from "i18next";

import Footer from "../components/shared/Footer.astro";
import Menu from "../components/shared/Menu.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={t("home.description")} />
		<link rel="icon" type="image/svg+xml" href="/PIAC.svg" />
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		<title>
			{t("home.title")}
		</title>
		<ClientRouter transition:animate="fade" />
	</head>
	<body>
		<Menu />
		<slot />
		<Footer />
	</body>
	<script is:inline data-astro-rerun src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
	<script is:inline data-astro-rerun>
		AOS.init();
	</script>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
