---
import { ClientRouter } from 'astro:transitions'
import { t } from 'i18next'

import Footer from '../components/shared/Footer.astro'
import Menu from '../components/shared/Menu.astro'
import '../styles/global.css'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='description' content={t('home.description')} />
    <link rel='icon' type='image/svg+xml' href='/PIAC.svg' />
    <link href='https://unpkg.com/aos@2.3.1/dist/aos.css' rel='stylesheet' />
    <!-- Google tag (gtag.js) -->
    <script async src='https://www.googletagmanager.com/gtag/js?id=G-1FLKHE6G2B'
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'G-1FLKHE6G2B')
    </script>
    <title>
      {t('home.title')}
    </title>
    <ClientRouter transition:animate='fade' />
  </head>
  <body>
    <Menu />
    <slot />
    <Footer />

    <script
      is:inline
      data-astro-rerun
      src='https://unpkg.com/aos@2.3.1/dist/aos.js'></script>
    <script is:inline data-astro-rerun>
      AOS.init({
        disable: 'mobile',
      })
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
